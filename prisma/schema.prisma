generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id       String @id @default(uuid())
  name     String
  email    String
  password String
}

model invoices {
  id         String    @id @default(uuid())
  amount     Int
  status     String
  date       DateTime  @default(now())
  customerId String
  customer   customers @relation(fields: [customerId], references: [id])

  @@index([customerId], map: "invoices_customerId_fkey")
}

model customers {
  id        String     @id @default(uuid())
  name      String
  email     String
  image_url String
  invoices  invoices[]
}

model revenue {
  month   String @unique
  revenue Int
}

model brands {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  website   String
  models    models[]
}

model models {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  modelNumber String
  size        String
  link        String
  scraperCode String
  brands      brands?  @relation(fields: [brandsId], references: [id])
  brandsId    String?
  priceHistory priceHistory[]
}

model priceHistory {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  price       Float
  model       models  @relation(fields: [modelId], references: [id])
  modelId     String
}